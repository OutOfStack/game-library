                "produces": [
                    "application/json"
                ],
                "summary": "Delete game",
                "operationId": "delete-game",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "Game ID",
                        "name": "id",
                        "in": "path",
                        "required": true
